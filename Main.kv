MDScreen:
    name: "main"
    
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1
        Image:
            source: "vqueri.png"
            size_hint: .8, .5
            pos_hint: {"center_x": .5, "center_y": .75}
    
    MDLabel:
        text: "VideoQuERI, Chat with your videos!"
        font_name: "Poppins-SemiBold.ttf"
        font_size: "25sp"
        pos_hint: {"center_x": .5, "center_y": 0.45}
        halign: "center"
        theme_text_color: "Custom"
        text_color: 53/255, 56/255, 60/255, 1
     

    MDRaisedButton:
        text: "Read FAQs section First here "
        font_name: "Poppins-Regular.ttf"
        font_size: "18sp"
        pos_hint: {"center_x": .5, "center_y": 0.33}
        halign: "center"
        underline : True
        #markup = True
        theme_text_color: "Custom"
        text_color: 1/255, 56/255, 23/255, 1
        on_release: app.open_link("https://videoqueri.streamlit.app/")

    #button lets go to pasting-url page
    MDFloatLayout:
        size_hint: .55, .08
        pos_hint: {"center_x": .5, "center_y": .20}
        
        canvas:
            Color:
                rgb: (100/255, 170/255, 23/255, 1)
            
            RoundedRectangle:
                size: self.size
                pos: self.pos
                radius: [22, 22, 22, 22]
    
    Button:
        text: ""
        size_hint: .45, .08
        pos_hint: {"center_x": .5, "center_y": .20}
        background_color: 0,0,0,0
        on_release:
            root.manager.transition.direction = "left"
            root.manager.current = "caption_page"
    
    MDLabel:
        text: "Use the App"
        halign: "center"
        pos_hint: {"center_y": .20}
        font_name: "Poppins-SemiBold.ttf"
        font_size: "15sp"
        color: 1, 1, 1, 1
    